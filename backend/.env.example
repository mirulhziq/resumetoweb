# Server
PORT=3000
NODE_ENV=production

# URLs (Railway will auto-set RAILWAY_PUBLIC_DOMAIN)
BACKEND_URL=https://your-app.up.railway.app
FRONTEND_URL=https://your-app.up.railway.app

# Apify - PDF Parsing
APIFY_API_TOKEN=your_apify_token
APIFY_ACTOR_ID=your_actor_id

# Anthropic Claude API - Content Enhancement
ANTHROPIC_API_KEY=your_claude_api_key

# Vercel - Portfolio Deployment
VERCEL_TOKEN=your_vercel_token

# ToyyibPay Payment Gateway
# Get from https://toyyibpay.com/ (production) or https://dev.toyyibpay.com/ (sandbox)
TOYYIBPAY_SECRET_KEY=your_secret_key
TOYYIBPAY_CATEGORY_CODE=your_category_code
TOYYIBPAY_AMOUNT=450
TOYYIBPAY_SANDBOX=false

# Email (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=ResumeToWeb <your_email@gmail.com>
